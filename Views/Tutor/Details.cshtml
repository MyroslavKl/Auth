@model Lab2.Models.Tutor

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Tutor Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <hr />
        <h4> Courses</h4>
            @foreach (var grade in Model.CourseTutors.Select(g => g.Course))
            {
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => grade.CourseName)
            </dd>

            }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TutorId }) |
    @Html.ActionLink("Back to List", "Index")
</div>

