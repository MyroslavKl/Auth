@model IEnumerable<Lab2.Models.Tutor>

@{
    ViewBag.Title = "Tutors";
    Layout = "_Layout";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .action-buttons a {
        text-decoration: none;
        color: #007bff;
        margin-right: 10px;
    }
</style>

<h2>Tutors</h2>
<button>
    <a asp-action="Create">Create</a>
</button>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Middle Name</th>
            <th>Surname</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.MiddleName</td>
                <td>@item.Surname</td>
                <td class="action-buttons">
                    <a asp-action="Details" asp-route-id="@item.TutorId">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.TutorId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.TutorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
